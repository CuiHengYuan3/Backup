<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="155dp"
    android:padding="6dp"
    >
    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="85dp"
        android:layout_height="135dp"
        android:src="@drawable/ic_menu_manage"
        android:scaleType="centerCrop"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/check"
android:background="@drawable/button"
        android:layout_alignBaseline="@id/iv_img"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="300dp"
        android:text="详细"
        android:textColor="@color/red"

        />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_img"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="@string/moviename"/>


    <LinearLayout
        android:id="@+id/ll_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/iv_img"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_start1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/start0"
            android:scaleType="centerInside"/>
        <ImageView
            android:id="@+id/iv_start2"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/start0"
            android:layout_marginLeft="3dp"
            android:scaleType="centerInside"/>
        <ImageView
            android:id="@+id/iv_start3"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/start0"
            android:layout_marginLeft="3dp"
            android:scaleType="centerInside"/>
        <ImageView
            android:id="@+id/iv_start4"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/start0"
            android:layout_marginLeft="3dp"
            android:scaleType="centerInside"/>
        <ImageView
            android:id="@+id/iv_start5"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/start0"
            android:layout_marginLeft="3dp"
            android:scaleType="centerInside"/>
        <TextView
            android:id="@+id/T豆瓣评分"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text="豆瓣评分:"
            android:layout_marginLeft="10dp"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/score"
    android:text="0.0"
    android:textColor="@color/deepblue"
    android:textSize="25dp"
    />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_daoyan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_start"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/iv_img"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="导演："
        android:textColor="@color/deepGray"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/tv_yanyuang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_img"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tv_daoyan"
        android:textColor="@color/gray"
        android:textSize="13dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="演员："/>
<View
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:layout_below="@id/iv_img"
   android:layout_marginTop="7dp"
    android:background="#A7A5A5"
    android:id="@+id/line"
    >

</View>
</RelativeLayout>